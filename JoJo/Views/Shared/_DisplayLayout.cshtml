<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/Filter.css")
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("JooleJoole", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav hidden-xs" id="navUl">
                    <li class="hidden-sm col-md-4 col-lg-4 hidden-xs left">
                        <span class="badge">Hello! User</span>
                        <img style="width:50px;height:50px" src="~/Src/Users/selfie.jfif" class="img-circle selfieImg" />
                    </li>
                    <li class="hidden-sm col-md-4 col-lg-4 hidden-xs left">
                        <form style="margin-top:8px" class="form" action="#" method="post">
                            <div class="row">
                                <div class="col-sm-10 col-md-10 col-lg-10 hidden-xs">
                                    <input class="form-control" type="text" name="search" placeholder="Search..." />
                                </div>

                                <div class="col-sm-2 col-md-2 col-lg-2 hidden-xs">
                                    <input class="btn btn-primary" type="submit" name="submit" value="Search" />
                                </div>
                            </div>
                        </form>
                    </li>
                </ul>

                <ul class="nav navbar-nav visible-xs">
                    <li>Hey</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>